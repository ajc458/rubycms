<% @section_title = 'Sections List' %>

<h2>Sections</h2>

<%= link_to('Add New Section', {:action => 'new'}, :class => 'new-link') %>

<div><%= pluralize(@sections.size, 'section') %> found</div>
<table>
	<tbody>
		<tr>
			<th>Position</th>
			<th>Page</th>
			<th>Section</th>
			<th>Content Type</th>
			<th>Content</th>
			<th>Visible</th>
			<th>Actions</th>
		</tr>
		<% @sections.each do |section| %>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.page_id %></td>
			<td><%= section.name %></td>
			<td><%= section.content_type %></td>
			<td><%= section.content %></td>
			<td><%= status_tag(section.visible) %></td>
			<td>
				<%= link_to('Show', {:action => 'show', :id => section.id}, :class => 'action show') %>
				<%= link_to('Edit', {:action => 'edit', :id => section.id}, :class => 'action edit') %>
				<%= link_to('Delete', {:action => 'delete', :id => section.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>