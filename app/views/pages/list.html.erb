<% @page_title = 'Pages List' %>

<h2>Pages</h2>

<%= link_to('Add New Page', {:action => 'new'}, :class => 'new-link') %>

<table>
	<tbody>
		<tr>
			<th>&nbsp;</th>
			<th>Permalink</th>
			<th>Page</th>
			<th>Visible</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.permalink %></td>
			<td><%= page.name %></td>
			<td><%= page.visible ? 'Yes' : 'No' %></td>
			<td><%= page.sections.size %></td>
			<td>
				<%= link_to('Show', {:action => 'show', :id => page.id}, :class => 'action show') %>
				<%= link_to('Edit', {:action => 'edit', :id => page.id}, :class => 'action edit') %>
				<%= link_to('Delete', {:action => 'delete', :id => page.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>